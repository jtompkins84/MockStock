<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/MainActionBar</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="MainActionBar" parent="MyAppTheme">
        <item name="windowActionBar">false</item>
        <item name="android:titleTextStyle">@style/TitleStyle</item>
    </style>

    <style name="MyAppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="AppTheme.AppBarOverlay">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TitleStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="windowActionBar">false</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="windowActionBar">false</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MyAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="MyAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>
</resources>
