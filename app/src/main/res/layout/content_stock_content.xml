<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="56dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:backgroundTint="@color/colorAccent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Portfolio"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/portfolio"
                    android:layout_weight="0.36"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="30dp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:text="$20,000.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/accountbalance"
                    android:layout_weight="0.36"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:paddingRight="15dp"/>
            </RelativeLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.design.widget.AppBarLayout
            android:id="@+id/stockheader"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:layout_below="@id/appbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AGTC"
                    android:id="@+id/stockticker"
                    android:textSize="20dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/companyname"
                    android:text="Applied Genetic Technologies Corp."
                    android:layout_below="@id/stockticker"
                    android:paddingLeft="17dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="113.05"
                    android:layout_alignTop="@id/stockticker"
                    android:layout_alignParentRight="true"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:textSize="20dp"/>
            </RelativeLayout>

        </android.support.design.widget.AppBarLayout>
        <android.support.design.widget.AppBarLayout
            android:id="@+id/changeheader"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:backgroundTint="@color/colorAccent"
            android:layout_below="@id/stockheader">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    android:id="@+id/change"
                    android:textSize="@dimen/changebar_font_size"
                    android:paddingLeft="15dp"
                    android:textColor="@color/offwhite"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/amtchange"
                    android:textSize="@dimen/changebar_font_size"
                    android:text="0.87"
                    android:paddingLeft="60dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/change"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Percent Chg"
                    android:layout_alignTop="@id/change"
                    android:layout_toRightOf="@id/amtchange"
                    android:textSize="@dimen/changebar_font_size"
                    android:id="@+id/percentchange"
                    android:paddingLeft="25dp"
                    android:textColor="@color/offwhite"/>

                <TextView
                    android:text="0.12%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/amtpctchange"
                    android:layout_weight="0.36"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/changebar_font_size"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:paddingRight="15dp"/>
            </RelativeLayout>

        </android.support.design.widget.AppBarLayout>


        <android.support.design.widget.AppBarLayout
            android:id="@+id/stockinfo"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:backgroundTint="@color/offwhite"
            android:layout_below="@id/changeheader">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:padding="4dp"> <!-- to show what the parent is -->
                <LinearLayout
                    android:background="#FFF"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="High Price"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/highprice"
                            android:background="@color/lightgrey"
                            android:padding="@dimen/attributepadding"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/highpriceamt"
                            android:padding="@dimen/attributepadding"
                            android:text="116.21"
                            android:layout_alignParentRight="true"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Open Price"
                            android:id="@+id/openprice"
                            android:layout_below="@id/highprice"
                            android:background="@color/lightgrey"
                            android:padding="@dimen/attributepadding"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/openpriceamt"
                            android:padding="@dimen/attributepadding"
                            android:text="111.13"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@id/openprice"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ask Price"
                            android:id="@+id/askprice"
                            android:background="@color/lightgrey"
                            android:padding="@dimen/attributepadding"
                            android:layout_below="@+id/openprice"
                            android:layout_alignParentStart="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/askpriceamt"
                            android:padding="@dimen/attributepadding"
                            android:text="113.21"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@id/askprice"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Change"
                            android:id="@+id/changeprice"
                            android:layout_below="@id/askprice"
                            android:background="@color/lightgrey"
                            android:padding="@dimen/attributepadding"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/changeamt"
                            android:padding="@dimen/attributepadding"
                            android:text="0.87"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@id/changeprice"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="52-Week High"
                            android:id="@+id/weekhigh"
                            android:layout_below="@id/changeprice"
                            android:background="@color/lightgrey"
                            android:padding="@dimen/attributepadding"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/weekhighamt"
                            android:padding="@dimen/attributepadding"
                            android:text="148.07"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@id/weekhigh"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="52-Week Low"
                            android:id="@+id/weeklow"
                            android:layout_below="@id/weekhigh"
                            android:background="@color/lightgrey"
                            android:padding="@dimen/attributepadding"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/weeklowamt"
                            android:padding="@dimen/attributepadding"
                            android:text="98.05"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@id/weeklow"/>






                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:background="#00FF00"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ask Price"
                            android:id="@+id/askprice2"
                            android:background="@color/lightgrey"
                            android:padding="@dimen/attributepadding"
                            android:layout_alignParentStart="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/askprice2amt"
                            android:padding="@dimen/attributepadding"
                            android:text="112.47"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@id/askprice2"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bid Price"
                            android:id="@+id/bidprice"
                            android:background="@color/lightgrey"
                            android:padding="@dimen/attributepadding"
                            android:layout_below="@+id/askprice2"
                            android:layout_alignParentStart="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bidpriceamt"
                            android:padding="@dimen/attributepadding"
                            android:text="115.23"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@id/bidprice"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Market Cap"
                            android:id="@+id/marketcap"
                            android:background="@color/lightgrey"
                            android:padding="@dimen/attributepadding"
                            android:layout_below="@+id/bidprice"
                            android:layout_alignParentStart="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/marketcapamt"
                            android:padding="@dimen/attributepadding"
                            android:text="58.42B"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@id/marketcap" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dividend"
                            android:id="@+id/dividend"
                            android:background="@color/lightgrey"
                            android:padding="@dimen/attributepadding"
                            android:layout_below="@+id/marketcap"
                            android:layout_alignParentStart="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dividendamt"
                            android:padding="@dimen/attributepadding"
                            android:text="115.23"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@id/dividend" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1 Yr Target"
                            android:id="@+id/yeartarget"
                            android:background="@color/lightgrey"
                            android:padding="@dimen/attributepadding"
                            android:layout_below="@+id/dividend"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/yeartargetamt"
                            android:padding="@dimen/attributepadding"
                            android:text="125.86"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@id/yeartarget" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Volume"
                            android:id="@+id/volume"
                            android:background="@color/lightgrey"
                            android:padding="@dimen/attributepadding"
                            android:layout_below="@+id/yeartarget"
                            android:layout_alignParentStart="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/volumeamt"
                            android:padding="@dimen/attributepadding"
                            android:text="14.6M"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@id/volume" />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

        </android.support.design.widget.AppBarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_below="@id/stockinfo">
            <Button
                android:text="BUY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buy"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:backgroundTint="@color/button"/>
            <Button
                android:text="SELL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stockinfo"
                android:id="@+id/Sell"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:backgroundTint="@color/button"/>
            <Button
                android:text="WATCH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stockinfo"
                android:id="@+id/Watch"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:backgroundTint="@color/button"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>